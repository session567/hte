{
  "name": "hte",
  "version": "0.2.1",
  "description": "HTE is a browser extension that provides various enhancements for Hattrick.",
  "license": "GPL-3.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.mjs",
    "build:extension": "node scripts/build-extension.mjs",
    "watch": "node scripts/watch.mjs",
    "dev": "web-ext run --source-dir . --start-url https://www.hattrick.org --watch-files dist/index.js dist/index.css",
    "dev:stage": "web-ext run --source-dir . --start-url https://stage.hattrick.org --watch-files dist/index.js dist/index.css",
    "clean": "rm -rf dist/",
    "lint": "eslint .",
    "test": "vitest run",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.1.32",
    "@vitest/eslint-plugin": "^1.6.6",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16",
    "web-ext": "^9.2.0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.28.1"
}
