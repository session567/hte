{
  "name": "hte",
  "version": "0.2.4",
  "description": "HTE is a browser extension that provides various enhancements for Hattrick.",
  "license": "GPL-3.0",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "watch": "DEV_MODE=true vite build --watch --mode development",
    "watch:chrome": "TARGET=chrome pnpm watch",
    "validate": "web-ext lint -s dist",
    "clean": "rm -rf dist/",
    "lint": "eslint .",
    "lint:css": "stylelint 'src/**/*.css'",
    "test": "vitest run",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ],
    "src/**/*.css": [
      "stylelint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/webextension-polyfill": "^0.12.4",
    "@vitest/eslint-plugin": "^1.6.6",
    "autoprefixer": "^10.4.24",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-for": "^2.1.1",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.8.1",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-web-extension": "^4.5.0",
    "vitest": "^4.0.18",
    "webextension-polyfill": "^0.12.0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.28.1"
}
