{
  "name": "hte",
  "version": "0.1.0",
  "description": "Various enhancements for Hattrick",
  "license": "GPL-3.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outdir=dist --outbase=src --target=firefox115,chrome120",
    "watch": "esbuild src/index.ts --bundle --outdir=dist --outbase=src --target=firefox115,chrome120 --watch --define:__DEV__=true",
    "dev": "web-ext run --source-dir . --start-url https://www.hattrick.org --watch-files dist/index.js dist/index.css",
    "dev:stage": "web-ext run --source-dir . --start-url https://stage.hattrick.org --watch-files dist/index.js dist/index.css",
    "clean": "rm -rf dist/",
    "lint": "eslint .",
    "test": "jest",
    "coverage": "jest --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.1.32",
    "@types/identity-obj-proxy": "^3",
    "@types/jest": "^30.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "web-ext": "^9.2.0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.27.0"
}
