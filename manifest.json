{
  "manifest_version": 3,
  "name": "HTE - Hattrick Enhanced",
  "version": "0.2.1",
  "description": "HTE is a browser extension that provides various enhancements for Hattrick.",
  "default_locale": "en",
  "icons": {
    "48": "icons/logo.svg",
    "64": "icons/logo.svg",
    "72": "icons/logo.svg",
    "96": "icons/logo.svg",
    "128": "icons/logo.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{d7e1035f-903c-4013-bc7a-59ad3c8a8194}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.hattrick.org/*"],
      "css": ["dist/index.css"],
      "js": ["dist/index.js"]
    }
  ],
  "permissions": ["storage"]
}
